{
  "_display_information": {
    "name": "ai-weather-app",
    "description": "AI-powered weather assistant app",
    "background_color": "#36C5F0"
  },
  "features": {
    "bot_user": {
      "display_name": "AI Weather Bot",
      "always_online": true
    }
  },
  "oauth_config": {
    "scopes": {
      "bot": [
        "channels:history",
        "channels:read",
        "chat:write",
        "app_mentions:read"
      ]
    }
  },
  "settings": {
    "event_subscriptions": {
      "bot_events": [
        "app_mention",
        "message.channels"
      ]
    },
    "socket_mode_enabled": true,
    "org_deploy_enabled": false,
    "token_rotation_enabled": false
  }
}

